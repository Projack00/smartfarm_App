<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".page.Update_Data_Mashroom">

    <EditText
        android:id="@+id/Edit_Name_Mashroom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ระบุชนิดของเห็ด" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="3dp">


            <TextView
                android:id="@+id/mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="test" />

        </LinearLayout>
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ค่าอุณหภูมิต่ำสุด"
                android:textSize="25dp" />

            <Spinner
                android:id="@+id/Tem-min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"></Spinner>

            <TextView
                android:id="@+id/textTemMin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="test" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ค่าอุณหภูมิสูงสุด"
                android:textSize="25dp" />

            <Spinner
                android:id="@+id/Tem_Max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp" />

            <TextView
                android:id="@+id/textTemMax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="test" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ค่าความชื้นต่ำสุด"
                android:textSize="25dp" />

            <Spinner
                android:id="@+id/Humid_Min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textHumidMin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="test" />
        </TableRow>

        <TableRow>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ค่าความชื้นสูงสุด"
                android:textSize="25dp" />

            <Spinner
                android:id="@+id/Humid-max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textHumidMax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="test" />

        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/Insert_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ตกลง" />

        </TableRow>
    </TableLayout>

</LinearLayout>